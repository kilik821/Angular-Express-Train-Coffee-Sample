style.
  .completed{
    text-decoration:line-through;
    background: darkgrey;
  }
.span6.offset3
    h2 My Todos
    hr
    .pull-right
      button.btn(ng-click='removeComplete()') Remove Completed Todos
    table.table.table-hover.table-condensed
      thead
        tr
          th
          th
      tbody
tr(ng-repeat='todo in todos', ng-class='{completed: todo.complete}')
td.span1
input(type='checkbox', ng-model='todo.complete', ng-click='markComplete(todo)')
td {{todo.text}}
form.form-inline.well(name='newTodoForm')
legend New Todo
      input.input-xlarge(type='text', ng-model='newTodo.text', required='required', placeholder='Todo...')
button.btn.btn-primary(ng-click='createTodo()') Create
      br
      | {{statusMessage}}
