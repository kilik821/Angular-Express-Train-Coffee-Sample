.offset4
  div(ng-controller='LoginCtrl')
    h2 Login
    form(name='login-form')
      input(type='text', ng-model='user.username', required='required', placeholder='username...')
      br
      input(type='password', ng-model='user.password', required='required', placeholder='password...')
      br
      button(ng-click='submit()') Login
      | {{statusMessage}}
    | - or -
    div(ng-controller='RegisterCtrl')
      h2 Register
      form(name='register-form')
        input(type='text', ng-model='user.username', required='required', placeholder='username...')
        br
        input(type='password', ng-model='user.password', required='required', placeholder='password...')
        br
        input(type='password', ng-model='user.confirmPassword', required='required', placeholder='confirm password...')
        br
        button(ng-click='submit()') Register
        | {{statusMessage}}
